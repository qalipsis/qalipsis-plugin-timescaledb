<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">
  <changeSet id="02" author="Palina Bril">
    <createTable tableName="meters">
      <column name="name" type="text">
        <constraints nullable="false"/>
      </column>
      <column name="tags" type="jsonb">
        <constraints nullable="true"/>
      </column>
      <column name="timestamp" type="TIMESTAMP WITH TIME ZONE">
        <constraints nullable="false"/>
      </column>
      <column name="type" type="varchar(50)">
        <constraints nullable="false"/>
      </column>
      <column name="tenant" type="varchar(20)">
        <constraints nullable="true"/>
      </column>
      <column name="campaign" type="varchar(20)">
        <constraints nullable="true"/>
      </column>
      <column name="scenario" type="varchar(20)">
        <constraints nullable="true"/>
      </column>
      <column name="count" type="decimal(18,6)">
        <constraints nullable="true"/>
      </column>
      <column name="value" type="decimal(18,6)">
        <constraints nullable="true"/>
      </column>
      <column name="sum" type="decimal(18,6)">
        <constraints nullable="true"/>
      </column>
      <column name="mean" type="decimal(18,6)">
        <constraints nullable="true"/>
      </column>
      <column name="active_tasks" type="int">
        <constraints nullable="true"/>
      </column>
      <column name="duration" type="decimal(18,6)">
        <constraints nullable="true"/>
      </column>
      <column name="unit" type="varchar(20)">
        <constraints nullable="true"/>
      </column>
      <column name="max" type="decimal(18,6)">
        <constraints nullable="true"/>
      </column>
      <column name="other" type="text">
        <constraints nullable="true"/>
      </column>
    </createTable>

    <createIndex tableName="meters" indexName="tenant_meter_idx">
      <column name="tenant"/>
    </createIndex>

    <createIndex tableName="meters" indexName="tenant_campaign_meter_idx">
      <column name="tenant"/>
      <column name="campaign"/>
    </createIndex>

    <createIndex tableName="meters" indexName="tenant_campaign_scenario_meter_idx">
      <column name="tenant"/>
      <column name="campaign"/>
      <column name="scenario"/>
    </createIndex>
    <sql>
      CREATE INDEX meters_tags_idx ON meters USING GIN (tags);
    </sql>
  </changeSet>

  <changeSet id="02" author="Eric Jesse" failOnError="false">
    <sql>
      SELECT create_hypertable('meters', 'timestamp',
                               partitioning_column => 'name',
                               number_partitions => 4,
                               chunk_time_interval => INTERVAL '1 day'
               );
    </sql>
  </changeSet>
</databaseChangeLog>
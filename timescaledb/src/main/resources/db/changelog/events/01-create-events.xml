<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">
  <changeSet id="01" author="Gabriel Moraes">
    <createTable tableName="events">
      <column name="name" type="text">
        <constraints nullable="false"/>
      </column>
      <column name="timestamp" type="TIMESTAMP WITH TIME ZONE">
        <constraints nullable="false"/>
      </column>
      <column name="level" type="varchar(20)">
        <constraints nullable="false"/>
      </column>
      <column name="tenant" type="varchar(30)">
        <constraints nullable="true"/>
      </column>
      <column name="campaign" type="varchar(100)">
        <constraints nullable="true"/>
      </column>
      <column name="scenario" type="varchar(100)">
        <constraints nullable="true"/>
      </column>
      <column name="tags" type="jsonb">
        <constraints nullable="true"/>
      </column>
      <column name="message" type="text">
        <constraints nullable="true"/>
      </column>
      <column name="error" type="text">
        <constraints nullable="true"/>
      </column>
      <column name="stack_trace" type="text">
        <constraints nullable="true"/>
      </column>
      <column name="date" type="TIMESTAMP WITH TIME ZONE">
        <constraints nullable="true"/>
      </column>
      <column name="boolean" type="boolean">
        <constraints nullable="true"/>
      </column>
      <column name="number" type="decimal(20,6)">
        <constraints nullable="true"/>
      </column>
      <column name="duration_nano" type="bigint">
        <constraints nullable="true"/>
      </column>
      <column name="geo_point" type="jsonb">
        <constraints nullable="true"/>
      </column>
      <column name="value" type="jsonb">
        <constraints nullable="true"/>
      </column>
    </createTable>

    <createIndex tableName="events" indexName="tenant_event_idx">
      <column name="tenant"/>
    </createIndex>

    <createIndex tableName="events" indexName="tenant_campaign_event_idx">
      <column name="tenant"/>
      <column name="campaign"/>
    </createIndex>

    <createIndex tableName="events" indexName="tenant_campaign_scenario_event_idx">
      <column name="tenant"/>
      <column name="campaign"/>
      <column name="scenario"/>
    </createIndex>

    <sql>
      CREATE INDEX events_tags_idx ON events USING GIN (tags);
    </sql>
  </changeSet>

  <changeSet id="02" author="Eric Jesse" failOnError="false">
    <sql>
      SELECT create_hypertable('events', 'timestamp',
                               partitioning_column => 'name',
                               number_partitions => 4,
                               chunk_time_interval => INTERVAL '1 day'
               );
    </sql>
  </changeSet>
</databaseChangeLog>
<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <property name="CONSOLE_LOG_PATTERN"
    value="%d{yyyy-MM-dd'T'HH:mm:ss.SSS,UTC}Z %5p --- [%t / %X{campaign} / %X{scenario} / %X{minion} / %X{step} / %X{job}] %logger.%M.%L : %m%n"/>

  <appender class="ch.qos.logback.core.ConsoleAppender" name="console">
    <encoder>
      <charset>utf8</charset>
      <pattern>${CONSOLE_LOG_PATTERN}</pattern>
    </encoder>
    <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      <!-- Minimum logging level to be presented in the console logs-->
      <level>TRACE</level>
    </filter>
  </appender>

  <logger level="DEBUG" name="io.qalipsis.plugins.timescaledb" additivity="false">
    <appender-ref ref="console"/>
  </logger>
  <logger level="TRACE" name="io.qalipsis.plugins.timescaledb.meter.TimescaledbMeterRegistry" additivity="false">
    <appender-ref ref="console"/>
  </logger>
  <!--<logger level="DEBUG" name="io.r2dbc.postgresql" additivity="false">
    <appender-ref ref="console"/>
  </logger>
  <logger level="TRACE" name="io.micronaut.context.condition" additivity="false">
    <appender-ref ref="console"/>
  </logger>
  <logger level="DEBUG" name="io.micronaut.context.env.AbstractPropertySourceLoader" additivity="false">
    <appender-ref ref="console"/>
  </logger>-->

  <root level="INFO">
    <appender-ref ref="console"/>
  </root>

</configuration>

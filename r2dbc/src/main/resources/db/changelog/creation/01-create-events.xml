<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">
  <changeSet id="01" author="Gabriel Moraes">
    <createTable tableName="events" schemaName="qalipsis_ts">
      <column name="timestamp" type="TIMESTAMP">
        <constraints nullable="false"/>
      </column>
      <column name="level" type="varchar(50)">
        <constraints nullable="false"/>
      </column>
      <column name="tags" type="text">
        <constraints nullable="true"/>
      </column>
      <column name="name" type="text">
        <constraints nullable="false"/>
      </column>
      <column name="message" type="text">
        <constraints nullable="true"/>
      </column>
      <column name="error" type="text">
        <constraints nullable="true"/>
      </column>
      <column name="stack_trace" type="text">
        <constraints nullable="true"/>
      </column>
      <column name="date" type="TIMESTAMP">
        <constraints nullable="true"/>
      </column>
      <column name="boolean" type="boolean">
        <constraints nullable="true"/>
      </column>
      <column name="number" type="decimal(20,6)">
        <constraints nullable="true"/>
      </column>
      <column name="value" type="text">
        <constraints nullable="true"/>
      </column>
    </createTable>
  </changeSet>
</databaseChangeLog>